<div class="container">
<div class="span12">
    <h2> Latest Sentence in <%= @house_name.capitalize %>: </h2> <br>
    <h3><%= @latest_sentence %></h3>
    <!--<p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>-->
</div>

<%= form_for @sentence, :html => { :class => "form-horizontal sentence" } do |f| %>

  <% if @sentence.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sentence.errors.count, "error") %> prohibited this sentence from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sentence.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label "Submit a new sentence: ", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sentence_text, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sentence_text) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Submit Next Sentence!", :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
</div>
