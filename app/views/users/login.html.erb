<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
  <div class="tembulogo"></div>
  <h1 class="title">Pass the Paper Please</h1>
  <div class="logo">Login</div>
  <!-- Main Form -->
  <div class="login-form-1" style="width: 250px">

    <% if flash[:problem] %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"> <%= flash[:problem] %> </h3>
          </div>
        </div>
    <% end %>

    <% if flash[:notice] %>
        <div id="error_expl" class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title"> <%= flash[:notice] %> </h3>
          </div>
        </div>
    <% end %>

    <%= form_tag create_session_path, method: "post",  :html => {:class => "text-left"} do %>
    <!--<form id="login-form" class="text-left"> -->
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <!--<label for="lg_username" class="sr-only">Username</label> -->
            <!--<input type="text" class="form-control" id="lg_username" name="lg_username" placeholder="username">-->
            <%= text_field_tag :matric, nil, :class => "form-control", :placeholder => "matric"%>

          </div>
          <div class="form-group">
            <!--<label for="lg_password" class="sr-only">Password</label>-->
            <!--<input type="password" class="form-control" id="lg_password" name="lg_password" placeholder="password"> -->
            <%= text_field_tag :room_number, nil, :class => "form-control", :placeholder => "room number (e.g. 08-162F)"%>
          </div>
        </div>
        <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
      </div>
      <div class="etc-login-form">
        <p style="opacity: 0.5">new user?
          <a href="/users/register" style="padding-left: 5px">create new account</a>
        </p>
      </div>
    <!--</form>-->
    <% end %>
  </div>
  <!-- end:Main Form -->
</div>
