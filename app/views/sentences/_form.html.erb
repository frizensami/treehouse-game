<%= form_for @sentence, :html => { :class => "form-horizontal sentence" } do |f| %>

  <% if @sentence.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sentence.errors.count, "error") %> prohibited this sentence from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sentence.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :house_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :house_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:house_id) %>
  </div>
  <div class="form-group">
    <%= f.label :sentence_text, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sentence_text, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sentence_text) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sentences_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
