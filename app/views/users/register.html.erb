<!-- REGISTRATION FORM -->
<div class="text-center" style="padding:50px 0">
  <div class="tembulogo"></div>
  <h1 class="title">Pass the Paper Please</h1>
  <div class="logo">Register</div>

  <!-- Main Form -->

  <div class="login-form-1">
    <!-- Errors -->
  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Unable to register due to <%= pluralize(@user.errors.count, "error") %>:</h3>
      </div>
      <div class="panel-body" style="background-color: orange !important">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
    <!--<form id="register-form" class="text-left"> -->
    <%= form_for @user, :html => {:class => "text-left"} do |f|%>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">

          <div class="form-group">
            <!--<label for="reg_username" class="sr-only">Matric Card Number</label> -->
            <!--<input type="text" class="form-control" id="reg_username" name="reg_username" placeholder="matric card number">-->
            <%= f.text_field :matric, :class => "form-control", :placeholder => "matric"%>
          </div>
          <div class="form-group">
            <!--<label for="reg_password" class="sr-only">Password</label>-->
            <!--<input type="password" class="form-control" id="reg_password" name="reg_password" placeholder="room number (e.g. 08-162F)">-->
            <%= f.text_field :room_number, :class => "form-control", :placeholder => "room number (e.g. 08-162F)"%>
          </div>


          <div class="form-group">
            <!--<label for="reg_fullname" class="sr-only">Full Name</label>-->
            <!--<input type="text" class="form-control" id="reg_fullname" name="reg_fullname" placeholder="full name"> -->
            <%= f.text_field :name, :class => "form-control", :placeholder => "name"%>
          </div>
        </div>
        <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
      </div>
      <div class="etc-login-form">
        <p style="opacity: 0.5">already have an account? 
          <a href="/users/login" style="padding-left: 5px">login here</a>
        </p>
      </div>
    <% end %>
    <!--</form>-->
  </div>
  <!-- end:Main Form -->
</div>
